<Page x:Class="WPFNav.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFNav"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue"
      Title="AboutPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Row 1-->
        <TextBlock Text="This solution was inspired by scandinavian minimalism.&#x0a;Everything related to the entity (Product|Order|Category) is represented compactly in a single window ('Manage' submenu)." Grid.Column="1" Grid.Row="1" Margin="5 5 5 5" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </Grid>
