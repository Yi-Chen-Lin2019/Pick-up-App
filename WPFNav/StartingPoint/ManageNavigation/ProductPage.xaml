<Page x:Class="WPFNav.StartingPoint.ManageNavigation.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFNav.StartingPoint.ManageNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue"
      Title="ProductPage">

    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
          </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
                <RowDefinition  Height="10"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="10"/>
          </Grid.RowDefinitions>
        
        <!--Row 1-->
        <TextBlock x:Name="CreateProductText" Text="Create product" Grid.Column="1"
                   Grid.Row="1" Margin="5 5 5 5" FontSize="20" 
                   TextWrapping="WrapWithOverflow"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>

        <TextBlock x:Name="ReadProductText" Text="Read product" Grid.Column="3"
                   Grid.Row="1" Margin="5 5 5 5" FontSize="20" 
                   TextWrapping="WrapWithOverflow"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>

        <TextBlock x:Name="UpdateProductText" Text="Update product" Grid.Column="5"
                   Grid.Row="1" Margin="5 5 5 5" FontSize="20" 
                   TextWrapping="WrapWithOverflow"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>

        <TextBlock x:Name="DeleteProductText" Text="Delete product" Grid.Column="7"
                   Grid.Row="1" Margin="5 5 5 5" FontSize="20" 
                   TextWrapping="WrapWithOverflow"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>
        
        <!--Row 2-->
        <Button HorizontalAlignment="Stretch" x:Name="BtnReadProducts" 
                Grid.Column="3" 
                Grid.ColumnSpan="2"
                Grid.Row="2" 
                Margin="20 20 20 20" 
                Click="ReadProductsButton_Click" Content="Read all products"/>

        <TextBlock x:Name="ProductName" Grid.Column="1"
                   Grid.Row="2"
                   Text="ProductName:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="15"/>

        <TextBox x:Name="ProductNameBox" Grid.Column="2"
                 Grid.Row="2"
                 Text=""
                 Margin="5 25 5 25"
                 TextWrapping="WrapWithOverflow"/>

        <!--Row 3 -->
        <TextBlock x:Name="Barcode" Grid.Column="1"
                   Grid.Row="3"
                   Text="Barcode:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="15"/>

        <TextBox x:Name="BarcodeBox" Grid.Column="2"
                 Grid.Row="3"
                 Text=""
                 Margin="5 25 5 25"
                 TextWrapping="WrapWithOverflow"/>

        <ListView Margin="10" Name="ProductList"
                  Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.RowSpan="2"
                  Grid.Row="3"></ListView>

        <!--Row 4-->
        <TextBlock x:Name="Price" Grid.Column="1"
                   Grid.Row="4"
                   Text="Price:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="15"/>

        <TextBox x:Name="PriceBox" Grid.Column="2"
                 Grid.Row="4"
                 Text=""
                 Margin="5 25 5 25"
                 TextWrapping="WrapWithOverflow"/>
        
        <!--Row 5-->
        <TextBlock x:Name="StockQuantity" Grid.Column="1"
                   Grid.Row="5"
                   Text="Stock quanity:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="15"/>

        <TextBox x:Name="StockQuantityBox" Grid.Column="2"
                 Grid.Row="5"
                 Text=""
                 Margin="5 25 5 25"
                 TextWrapping="WrapWithOverflow"/>
        
        <Button HorizontalAlignment="Stretch" x:Name="BtnReadProductById" 
                Grid.Column="3" 
                Grid.ColumnSpan="2"
                Grid.Row="5" 
                Margin="20 20 20 20" 
                Click="ReadProductById_Click" Content="Read product by id"/>

        <!--Row 6-->
        <TextBlock x:Name="Category" Grid.Column="1"
                   Grid.Row="6"
                   Text="Category:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="15"/>

        <ListBox x:Name="CategoryList"
                  Grid.Column="2"
                  Grid.Row="6"
                  Margin="5 10 5 10">
        </ListBox>
        
        <TextBox x:Name="TxtBoxReadProductById" Grid.Row="6" Grid.Column="3" Text=""
                 Grid.ColumnSpan="2"
                 Margin="10"
                 TextWrapping="WrapWithOverflow"
                 IsReadOnly="True"/>
        
        <!--Row 7-->
        <Button HorizontalAlignment="Stretch" x:Name="CreateProductButton" 
                Grid.Column="2" 
                Grid.Row="7" 
                Margin="5 15 5 15" 
                Click="CreateProductButton_Click" Content="Create product"/>

    </Grid>
</Page>
